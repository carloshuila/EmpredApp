<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".postres.PostreConectActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="324dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/id_imagen_postre_Act"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/colorBlanco"
            android:scaleType="center" />

        <TextView
            android:id="@+id/id_nombre_postre_Act"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorCintaCard"
            android:paddingStart="10dp"
            android:text="Postre Nombre"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/id_precio_Postre_Act"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorCintaCard"
           android:paddingStart="10dp"
            android:text="Postre Precio"
            android:textColor="@color/colorNegro"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_descripcion_Postre_Act"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorCintaCard"
            android:paddingStart="10dp"
            android:text="Postre Descripcion"
            android:textColor="@color/colorNegro"
            android:textSize="15sp" />

    </LinearLayout>

    <!---  contenedor total-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout3"
        android:layout_width="398dp"
        android:layout_height="51dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.166">

        <TextView
            android:id="@+id/id_total"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:paddingStart="20dp"
            android:text="10000"
            android:textColor="@color/colorNegro"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginEnd="4dp"
            android:paddingStart="30dp"
            android:text="Total:"
            android:textColor="@color/colorNegro"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/id_total"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.476">

        </TextView>

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/btn_cantidad"
            android:layout_width="130dp"
            android:layout_height="36dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.345"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textColor="@color/colorNegro"
            app:layout_constraintVertical_bias="0.461">

        </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <Button
            android:id="@+id/id_btn_comprar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/add_to_cart_bg"
            android:gravity="center"
            android:onClick="agregarCarrito"
            android:text="@string/btn_comprar"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
