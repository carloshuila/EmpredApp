<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".categorias.postres.PostreActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_imagen_postre_Act"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorBlanco">
            </ImageView>
            <TextView
                android:id="@+id/id_nombre_postre_Act"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Postre Nombre"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@color/colorCintaCard"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/id_descripcion_Postre_Act"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Postre Descripcion"
                android:textColor="@color/colorNegro"
                android:textSize="15sp"
                android:background="@color/colorCintaCard"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/id_precio_Postre_Act"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Postre Precio"
                android:textColor="@color/colorNegro"
                android:textStyle="bold"
                android:textSize="15sp"
                android:background="@color/colorCintaCard"
                android:gravity="center">

            </TextView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
