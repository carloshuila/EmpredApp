<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".postres.PostreConectActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="324dp"
        android:gravity="center"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/id_imagen_postre_Act"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/colorBlanco"
            android:scaleType="center" />

        <TextView
            android:id="@+id/id_nombre_postre_Act"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorCintaCard"
            android:paddingStart="10dp"
            android:text="Postre Nombre"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/id_precio_Postre_Act"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorCintaCard"
           android:paddingStart="10dp"
            android:text="Postre Precio"
            android:textColor="@color/colorNegro"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_descripcion_Postre_Act"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorCintaCard"
            android:paddingStart="10dp"
            android:text="Postre Descripcion"
            android:textColor="@color/colorNegro"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="248dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:padding="10dp">


            <Button
                android:id="@+id/id_btn_comprar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/add_to_cart_bg"
                android:gravity="center"
                android:onClick="agregarCarrito"
                android:text="@string/btn_comprar"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
